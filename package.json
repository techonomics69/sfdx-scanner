{
  "name": "scanner",
  "description": "Static code scanner that applies quality and security rules to Apex code, and provides feedback.",
  "version": "0.0.0",
  "author": "ISV SWAT",
  "bugs": "https://github.com/forcedotcom/sfdx-scanner/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@salesforce/command": "^2.1.4",
    "@salesforce/core": "^2.1.6",
    "@types/shelljs": "^0.8.6",
    "shelljs": "^0.8.3",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "1.5.0",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^13.1.8",
    "chai": "^4",
    "globby": "^11.0.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "ts-node": "^8",
    "tslint": "^6.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/forcedotcom/sfdx-scanner",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "topics": {
      "hello": {
        "description": "Commands to say hello."
      },
      "scanner": {
        "description": "[Description of scanner plugin goes here]",
        "subtopics": {
          "rule": {
            "description": "[Description for 'rule' subtopic]"
          }
        }
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "forcedotcom/sfdx-scanner",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "postinstall": "./download-pmd.sh"
  }
}
